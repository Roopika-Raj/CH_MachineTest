<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/threeTwentyEight"
    android:layout_height="160dp"
    android:layout_marginBottom="@dimen/sixteen"
    android:background="@drawable/image_bg"
    android:elevation="@dimen/five">

    <ImageView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brandnName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve"
        android:layout_marginTop="@dimen/seven"
        android:layout_marginEnd="@dimen/twelve"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/oppof19"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images" />

    <TextView
        android:id="@+id/mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirteen"
        android:text="@string/_280"
        android:textColor="@color/mrpColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/brandnName"
        app:layout_constraintTop_toBottomOf="@id/brandnName" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@id/mrp"
        app:layout_constraintStart_toEndOf="@id/mrp"
        app:layout_constraintTop_toBottomOf="@id/brandnName"
        app:layout_constraintTop_toTopOf="@id/mrp" />

    <TextView
        android:id="@+id/discountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/_17_91_off"
        android:textColor="@color/mrpColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/mrp"
        app:layout_constraintStart_toEndOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@id/brandnName"
        app:layout_constraintTop_toTopOf="@id/mrp" />


</androidx.constraintlayout.widget.ConstraintLayout>